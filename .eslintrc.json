{
  "root": true,
  "extends": ["warp"],
  "plugins": ["markdown"],
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "module"
  },
  "globals": {
    "setTimeout": false,
    "clearTimeout": false,
    "Promise": false
  },
  "rules": {
    "space-before-blocks": [2, "never"],
    "consistent-this": [2, "_this"],
    "semi": [2, "always", {"omitLastInOneLineBlock": true}],
    "curly": 0,
    "func-style": 0,
    "prefer-template": 0,
    "prefer-arrow-callback": 0,
    "no-use-before-define": 0,
    "max-statements-per-line": 0,
    "prefer-rest-params": 0,
    "class-methods-use-this": 0,
    "camelcase": 0,
    "indent": 0,
    "func-name-matching": 0,
    "no-console": 2,
    "eqeqeq": [2, "smart"],
    "no-eq-null": 0,
    "no-param-reassign": 0
  },
  "overrides": [
    {
      "files": ["test/**"],
      "env": {"node": true, "mocha": true},
      "globals": {"Promise": false},
      "rules": {
        "arrow-body-style": 0,
        "no-sequences": 0,
        "max-len": 0,
        "space-before-function-paren": ["error", "always"]
      }
    },
    {
      "files": ["README.md"],
      "env": {
        "browser": true,
        "node": true
      },
      "globals": {
        "Future": false,
        "S": false,
        "Promise": false
      },
      "rules": {
        "no-console": 0
      }
    }
  ]
}
